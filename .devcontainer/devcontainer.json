{
  "name": "Ansible Kubernetes",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "extensions": [
        "Compilenix.vscode-zonefile",
        "EditorConfig.EditorConfig",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "opentofu.vscode-opentofu",
        "redhat.ansible",
        "redhat.vscode-yaml",
        "timonwong.shellcheck"
      ],
      "settings": {
        "ansible.python.interpreterPath": "python3",
        "ansible.validation.lint.path": "ansible-lint",
        "files.associations": {
          "**/roles/**/*.yml": "ansible",
          "**/roles/**/*.yaml": "ansible",
          "**/roles/**/*.j2": "ansible-jinja",
          "**/example-hooks/**/*.yml": "ansible",
          "**/example-hooks/**/*.yaml": "ansible",
          "**/example-hooks/**/*.j2": "ansible-jinja",
          "docker-compose.*": "dockercompose",
          "db.k8s.local": "zone"
        },
        "telemetry.editStats.enabled": false,
        "telemetry.telemetryLevel": "off"
      }
    }
  },

  "remoteUser": "vscode",

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/host/.ssh,readonly,type=bind,consistency=cached"
  ]
}
